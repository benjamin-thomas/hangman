<h1>Let's play!</h1>

<p>
Turns left: <%= @tally.turns_left %>
</p>

<p>
Letters used: <%= @tally.used |> Enum.join(", ") %>
</p>

<p>
Word so far: <%= @tally.letters |> Enum.join("_") %>
</p>

<%= form_for(@conn, Routes.hangman_path(@conn, :update), [as: "make_move", autocomplete: "off", method: :put], fn f -> %>

<%= label(f, :guess) %>
<%= text_input(f, :guess, autofocus: true) %>

<%= submit("Make next guess") %>

<% end) %>